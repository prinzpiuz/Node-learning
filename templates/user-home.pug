extends layouts/base.pug

block content
    main.bg-white.mx-auto.mt-10.p-10.w-full(class="lg_w-10/12")
        h1 Hi #{user.name}
        h2.mb-8 Your tasks

        .ot-table-wrapper
            if tasks
                table.ot-table.table-collapse
                    thead
                        tr
                            th Tasks
                            th Project
                            th Start Date
                            th Status
                            th(colspan=2) Action
                    tbody
                        each task in tasks
                            tr
                                td #{task.task}
                                td #{task.projectName}
                                td #{task.start_date}
                                if task.status == 0
                                    td not-started
                                else if task.status == 1
                                    td started on #{task.start_date}
                                else if task.status == 2
                                    td finished on #{task.completed_date}
                                else if task.status == 3
                                    td paused 
                                if task.status == 0 
                                    td
                                        form(method='POST', action=('/task-start'))
                                            input(type='hidden' name='taskId' value=(task.id))
                                            button(type="submit").link start
                                else if task.status == 3
                                    td
                                        form(method='POST', action=('/task-resume'))
                                            input(type='hidden' name='taskId' value=(task.id))
                                            button(type="submit").link resume
                                else if task.status == 1
                                    td
                                        form(method='POST', action=('/task-complete'))
                                            input(type='hidden' name='taskId' value=(task.id))
                                            button(type="submit").link complete
                                    td
                                        form(method='POST', action=('/task-pause'))
                                            input(type='hidden' name='taskId' value=(task.id))
                                            button(type="submit").link pause
                                else
                                    td Change-Status
                                td
                                    a(href='/task-detail/' + task.id) details