extends layouts/base.pug

block content
    main.bg-white.mx-auto.mt-10.p-10(class="md_w-6/12")
        if edit
            h1 Edit Project
        else
            h1 Add Project
        form(method='POST', action=(edit ? '/admin//editProject':'/admin/project-assigned'))
            .my-4
                label.label-input Project Name
                input(type='text' name='project' value=(edit ? project.project : '')).input
            .my-4
                label.label-input Select Users (Multiple selectable)
                select(name='users', multiple).input
                    each user in users
                        option(type="checkbox", value=user.id) #{user.name}
            .my-4
                label.label-input Type
                select(name='projectType').input
                        option(value=0) Internal
                        option(value=1) External
                        option(value=2) PoC
            input(type='hidden' name='projectId' value=(edit ? project.id : ''))
            button(type="submit").button.mt-4 Submit
