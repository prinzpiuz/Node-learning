extends layouts/base.pug

block content
    main.bg-white.mx-auto.mt-10.p-10.w-full(class="lg_w-8/12")
        h1 Projects
        .ot-table-wrapper.mt-10
            table.ot-table.table-collapse
                thead
                    tr
                        th Projects
                        th Type
                        th Action
                tbody
                    each project in projects
                        tr
                            td #{project.project}
                            if project.type == 0
                                td internal
                            if project.type == 1
                                td client
                            if project.type == 2
                                td POC
                            td
                                a(href='/admin/delete_project/' + project.id) delete |
                                a(href='/admin/project/add-users/' + project.id + '/?edit=true') edit
